271
00:12:21,990 --> 00:12:22,870
[thuds]

272
00:12:22,950 --> 00:12:24,200
[growling]

273
00:12:25,950 --> 00:12:26,790
[snarls]

274
00:12:29,710 --> 00:12:31,500
